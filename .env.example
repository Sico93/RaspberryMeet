# RaspberryMeet Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# BigBlueButton Configuration
# ============================================
BBB_SERVER_URL=https://bbb.example.eu/bigbluebutton/
BBB_API_SECRET=your-bbb-api-secret-here

# Default Meeting Room
BBB_DEFAULT_ROOM_URL=https://bbb.example.eu/b/room-abc-def
BBB_DEFAULT_ROOM_ID=default-room
BBB_DEFAULT_ROOM_PASSWORD=secure-room-password
BBB_DEFAULT_USERNAME=RaspberryMeet-Room-1

# ============================================
# CalDAV Calendar Integration
# ============================================
CALDAV_ENABLED=true
CALDAV_URL=https://nextcloud.example.eu/remote.php/dav
CALDAV_USERNAME=meeting-room-1@example.eu
CALDAV_PASSWORD=secure-caldav-password
CALDAV_CALENDAR_NAME=Meetings
CALDAV_SYNC_INTERVAL_MINUTES=5

# ============================================
# Web Admin Interface
# ============================================
WEB_ENABLED=true
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_USERNAME=admin

# WEB_PASSWORD can be plain text OR a SHA-256 hash (prefixed with 'sha256:')
# For better security, use a hashed password:
#   Run: python scripts/hash_password.py
#   Then copy the generated hash here
# Example hash (for "change-this-password"):
WEB_PASSWORD=sha256:b7bc1548a00c8892a0ced4c26e6d07b1395452b4dbaab45f854e913d3f201c77

WEB_SECRET_KEY=generate-a-random-secret-key-here
WEB_HEADLESS_BROWSER=false

# ============================================
# GPIO Configuration
# ============================================
GPIO_ENABLED=true
GPIO_JOIN_BUTTON_PIN=17
GPIO_LEAVE_BUTTON_PIN=27
GPIO_MUTE_BUTTON_PIN=22
GPIO_STATUS_LED_GREEN_PIN=23
GPIO_STATUS_LED_RED_PIN=24

# ============================================
# Audio/Video Configuration
# ============================================
AUDIO_PREFERRED_DEVICE=Jabra Speak 510
AUDIO_FALLBACK_TO_HDMI=true
VIDEO_DEVICE=/dev/video0

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/raspberrymeet/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=production
DEBUG=false
AUTO_JOIN_ON_BOOT=false
KIOSK_MODE=true
